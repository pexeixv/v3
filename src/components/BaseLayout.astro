---
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
import "@fontsource-variable/outfit";

interface Props {
  title?: string;
}

const { title = "Gavin Pereira" } = Astro.props as Props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col font-outfit font-light">
    <Header />

    <main class="flex-1">
      <slot> Content goes here </slot>
    </main>

    <Footer />
  </body>
</html>
